<?xml version="1.0"?>
<layout version="0.1.0">
    <swarming_riselms_list_index>
    	<update handle="customer_account" />
    	<reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="swarming_riselms/courses" name="riselms.courselist" template="swarming/riselms/list.phtml"/>
        </reference>
    </swarming_riselms_list_index>


    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink">
                <name>swarming_riselms_list_index</name>
                <path>swarming_riselms/list/index</path>
                <label>My Courses</label>
            </action>
        </reference>
    </customer_account>

    <PRODUCT_TYPE_riselms translate="label" module="riselms_product">
        <label>Catalog Product View (Riselms)</label>

        <reference name="root">
            <action method="addBodyClass"><classname>catalog-product-riselms</classname></action>
        </reference>

        <reference name="product.info">
            <block type="swarming_riselms/product_view_type" name="product.info.riselms" as="product_type_data" template="swarming/riselms/catalog/product/view/type/default.phtml">
                <block type="core/text_list" name="product.info.riselms.extra" as="product_type_data_extra" translate="label">
                    <label>Product Extra Info</label>
                </block>
            </block>
        </reference>

        <reference name="product.info.addtocart">
            <action method="setTemplate"><template>swarming/riselms/catalog/product/view/addtocart.phtml</template></action>
        </reference>
    </PRODUCT_TYPE_riselms>
</layout>
