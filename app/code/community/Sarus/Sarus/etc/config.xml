<?xml version="1.0"?>
<config>
    <modules>
        <Sarus_Sarus>
            <version>0.1.0</version>
        </Sarus_Sarus>
    </modules>
    <global>
        <models>
            <sarus_sarus>
                <class>Sarus_Sarus_Model</class>
                <resourceModel>sarus_sarus_resource</resourceModel>
            </sarus_sarus>
            <sarus_sarus_resource>
                <class>Sarus_Sarus_Model_Resource</class>
                <entities>
                    <sarus_submission>
                        <table>sarus_submission</table>
                    </sarus_submission>
                </entities>
            </sarus_sarus_resource>
        </models>
        <blocks>
            <sarus_sarus>
                <class>Sarus_Sarus_Block</class>
            </sarus_sarus>
        </blocks>
        <helpers>
            <sarus_sarus>
                <class>Sarus_Sarus_Helper</class>
            </sarus_sarus>
        </helpers>
        <resources>
            <sarus_setup>
                <setup>
                    <module>Sarus_Sarus</module>
                </setup>
            </sarus_setup>
        </resources>
        <fieldsets>
            <sales_convert_quote_item>
                <sarus_course_uuid>
                    <to_order_item>*</to_order_item>
                </sarus_course_uuid>
            </sales_convert_quote_item>
            <sales_convert_order_item>
                <sarus_course_uuid>
                    <to_quote_item>*</to_quote_item>
                </sarus_course_uuid>
            </sales_convert_order_item>
        </fieldsets>
        <catalog>
            <product>
                <type>
                    <sarus translate="label">
                        <label>Sarus Product</label>
                        <model>sarus_sarus/product_type</model>
                        <composite>0</composite>
                        <index_priority>25</index_priority>
                        <can_use_qty_decimals>0</can_use_qty_decimals>
                        <is_qty>1</is_qty>
                    </sarus>
                </type>
            </product>
        </catalog>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <sarus_course_uuid/>
                    </product_attributes>
                </item>
            </quote>
        </sales>
        <events>
            <checkout_allow_guest>
                <observers>
                    <sarus_sarus>
                        <type>singleton</type>
                        <class>sarus_sarus/observer_checkout_allowGuest</class>
                        <method>execute</method>
                    </sarus_sarus>
                </observers>
            </checkout_allow_guest>
            <sales_quote_item_set_product>
                <observers>
                    <sarus_sarus>
                        <type>model</type>
                        <class>sarus_sarus/observer_sales_quoteItem_setProduct</class>
                        <method>execute</method>
                    </sarus_sarus>
                </observers>
            </sales_quote_item_set_product>
            <sales_quote_item_qty_set_after>
                <observers>
                    <sarus_product>
                        <class>sarus_sarus/observer_sales_quoteItem_setQtyAfter</class>
                        <method>execute</method>
                    </sarus_product>
                </observers>
            </sales_quote_item_qty_set_after>
            <sales_order_place_after>
                <observers>
                    <sarus_sarus>
                        <type>singleton</type>
                        <class>sarus_sarus/observer_sales_order_placeAfter</class>
                        <method>execute</method>
                    </sarus_sarus>
                </observers>
            </sales_order_place_after>
            <sales_order_creditmemo_refund>
                <observers>
                    <sarus_sarus>
                        <type>singleton</type>
                        <class>sarus_sarus/observer_Sales_Creditmemo_Refund</class>
                        <method>execute</method>
                    </sarus_sarus>
                </observers>
            </sales_order_creditmemo_refund>
            <catalog_product_delete_before>
                <observers>
                    <sarus_sarus>
                        <class>sarus_sarus/observer_Catalog_ProductDeleteBefore</class>
                        <method>execute</method>
                    </sarus_sarus>
                </observers>
            </catalog_product_delete_before>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <sarus_sarus>
                    <file>sarus/sarus.xml</file>
                </sarus_sarus>
            </updates>
        </layout>
        <routers>
            <sarus_sarus>
                <use>standard</use>
                <args>
                    <module>Sarus_Sarus</module>
                    <frontName>sarus</frontName>
                </args>
            </sarus_sarus>
        </routers>
    </frontend>
    <crontab>
        <jobs>
            <sarus_unsynced_products_catalog>
                <schedule><cron_expr>*/10 * * * *</cron_expr></schedule>
                <run>
                    <model>sarus_sarus/cron_submissionQueue::execute</model>
                </run>
            </sarus_unsynced_products_catalog>
        </jobs>
    </crontab>
    <adminhtml>
        <layout>
            <updates>
                <sarus_buzzi>
                    <file>sarus/sarus.xml</file>
                </sarus_buzzi>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Sarus_Sarus before="-">Sarus_Sarus_Adminhtml</Sarus_Sarus>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <sarus_sarus>
            <general>
                <enabled>1</enabled>
                <my_courses>1</my_courses>
            </general>
            <api>
                <auth_token backend_model="adminhtml/system_config_backend_encrypted"/>
                <max_time_resend>5</max_time_resend>
                <base_url>https://api.sarus.io</base_url>
            </api>
        </sarus_sarus>
    </default>
</config>
