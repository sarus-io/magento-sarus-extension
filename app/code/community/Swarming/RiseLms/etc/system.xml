                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </rise_api_auth_token>
                        <rise_base_url>
                            <label>Rise LMS Base URL</label>
                            <comment>Base URL for RiseLMS install. Do not include trailing slash (/). i.e. http://mycompany.riselms.com</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </rise_base_url>
                        <rise_api_base_url>
                            <label>API Base URL</label>
                            <comment>Base URL for RiseLMS API. Do not include trailing slash (/). i.e. http://api.riselms.com</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
