                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </rise_api_course_token_endpoint>
                        <rise_api_notification_recipient>
                            <label>Rise LMS Notification Recipient</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </rise_api_notification_recipient>
                        <rise_submissionqueue_log translate="button_label">
                            <label></label>
                            <button_label>View Failed Submissions</button_label>
                            <frontend_model>swarming_riselms/adminhtml_system_config_errorLog</frontend_model>
                            <sort_order>999</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </rise_submissionqueue_log>
                    </fields>
                </general>
                <product>
                    <label>Configurations</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
